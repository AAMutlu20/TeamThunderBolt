@{
    ViewData["Title"] = "Student Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="~/css/students/student.css">
    <link rel="stylesheet" href="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.css"> <!-- Ionic Icons -->
</head>
<body>
<header>
    <div class="logo"><a href="#">School Logo</a></div>
    <nav>
        <ul>
            <<li><a asp-action="Index" asp-controller="Home" title="Home"><ion-icon name="home-outline"></ion-icon></a></li>
            <li><a asp-action="StudentAssignments" asp-controller="Dashboard" title="Assignments"><ion-icon name="clipboard-outline"></ion-icon></a></li>
            <li><a asp-action="StudentGrades" asp-controller="Dashboard" title="Grades"><ion-icon name="book-outline"></ion-icon></a></li>
            <li><a asp-action="StudentNotifications" asp-controller="Dashboard" title="Notifications"><ion-icon name="notifications-outline"><span class="badge">2</span></ion-icon></a></li>
            <li><a asp-action="Login" asp-controller="Account" title="Log out"><ion-icon name="power-outline"></ion-icon></a></li>
        </ul>
    </nav>
</header>
<main>
    <div class="welcome-banner">
        <h1>Welcome back, [Student Name]!</h1>
        <p class="date">July 25, 2024</p>
        <p class="quote">"The only way to do great work is to love what you do." - Steve Jobs</p>
    </div>
    <div class="dashboard-cards">
        <div class="card assignments-card">
            <h2>Assignments</h2>
            <div class="progress-ring" data-progress="75"></div>
            <p>Upcoming: 5</p>
            <p>Due Today: 2</p>
            <p>Overdue: 1</p>
        </div>
        <div class="card grades-card">
            <h2>Grades</h2>
            <div class="grade-graph"></div>
            <p>Average Grade: 5.50</p>
        </div>
    </div>
    <section class="assignments-section">
        <h2>Upcoming Assignments</h2>
        <ul class="assignments-list">
            <li class="assignment overdue">
                <strong>Course Name</strong>
                <a href="#">Assignment Title</a>
                <span class="due-date"><ion-icon name="calendar-outline"></ion-icon> July 20</span>
                <span class="status-tag">Overdue</span>
                <button class="action-btn">Submit</button>
            </li>
            <!-- Additional assignments here -->
        </ul>
    </section>
    <section class="grades-section">
        <h2>Grades Overview</h2>
        <table class="grades-table">
            <thead>
            <tr>
                <th>Course</th>
                <th>Assignment</th>
                <th>Grade</th>
                <th>Date Graded</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Course Name</td>
                <td><a href="#">Assignment Title</a></td>
                <td class="grade A">6</td>
                <td><ion-icon name="calendar-outline"></ion-icon> July 22</td>
            </tr>
            <!-- Additional grades here -->
            </tbody>
        </table>
    </section>
</main>
<footer>
    <div class="contact-info">
        <p><ion-icon name="call-outline"></ion-icon> (123) 456-7890</p>
        <p><ion-icon name="mail-outline"></ion-icon> info@school.edu</p>
    </div>
    <div class="useful-links">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
        <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Help Center</a>
        <a href="#">Feedback</a>
    </div>
    <div class="social-media">
        <a href="#" class="icon ion-logo-facebook"></a>
        <a href="#" class="icon ion-logo-twitter"></a>
        <a href="#" class="icon ion-logo-linkedin"></a>
    </div>
</footer>
<!-- Ionicons -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="~/js/students/student.js"></script>
</body>
</html>
