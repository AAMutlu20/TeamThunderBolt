@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Educational Platform</title>
    <link rel="stylesheet" href="css/site.css">
    <link rel="stylesheet" href="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.css"> <!-- Ionic Icons -->
</head>
<body>
<!-- Header Section -->
<header>
    <div class="logo">
        <img src="images/EAH_Long.png" alt="Educational Platform Logo" class="logo-img">
    </div>
    <nav>
        <ul>
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a href="#features">Features</a></li>
            <li><a href="#how-it-works">How It Works</a></li>
            <li><a href="#resources">Resources</a></li>
            <li><a asp-action="Privacy" asp-controller="Home">Privacy</a></li>
        </ul>
    </nav>
</header>

<!-- Hero Section -->
<section id="hero">
    <div class="hero-content">
        <h1>The best educational institution tool</h1>
        <p>Personalized to tailor to your needs.</p>
        <button class="cta-btn"><a asp-action="StudentDashboard" asp-controller="Dashboard">Get Started Now</a></button>
    </div>
</section>
<!-- Features Section -->
<section id="features">
    <h2>Features</h2>
    <div class="features-container">
        <div class="feature-card">
            <ion-icon name="book-outline" class="icon" alt="Interactive Exercises"></ion-icon>
            <h3>Interactive Exercises</h3>
            <p>Engage with custom activities designed for effective learning.</p>
        </div>
        <div class="feature-card">
            <ion-icon name="person-circle-outline" class="icon" alt="Expert Assistance"></ion-icon>
            <h3>Expert Assistance</h3>
            <p>Get help from your tutors whenever you need it.</p>
        </div>
        <div class="feature-card">
            <ion-icon name="bar-chart-outline" class="icon" alt="Track Your Progress"></ion-icon>
            <h3>Track Your Progress</h3>
            <p>Monitor your grades and stay motivated.</p>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section id="how-it-works">
    <h2>How It Works</h2>
    <div class="steps-container">
        <div class="step">
            <ion-icon name="create-outline" class="icon" alt="Sign Up"></ion-icon>
            <h3>Sign Up</h3>
            <p>Create your free account easily.</p>
        </div>
        <div class="step">
            <ion-icon name="people-outline" class="icon" alt="Connect"></ion-icon>
            <h3>Connect</h3>
            <p>Join a classroom and be a part of a community</p>
        </div>
        <div class="step">
            <ion-icon name="school-outline" class="icon" alt="Learn"></ion-icon>
            <h3>Learn</h3>
            <p>Start using the platform to excel in your studies.</p>
        </div>
    </div>
</section>

<!-- Resources Section -->
<section id="resources">
    <h2>Resources</h2>
    <div class="resources-container">
        <div class="resource-card">
            <h3>Educational Articles</h3>
            <p class="resource-link" onclick="window.location.href='#';">Scroll through useful links.</p>
        </div>
        <div class="resource-card">
            <h3>FAQs</h3>
            <p class="resource-link" onclick="toggleFAQ()">Got a question? Look for it here.</p>
        </div>
        <div class="resource-card">
            <h3>Help Center</h3>
            <p class="resource-link" onclick="window.location.href='https://www.youtube.com/watch?v=dQw4w9WgXcQ';">Contact a support team.</p>
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer>
    <div class="footer-links">
        <a asp-action="Index" asp-controller="Home">Home</a>
        <a href="#features">Features</a>
        <a href="#how-it-works">How It Works</a>
        <a href="#resources">Resources</a>
        <a asp-action="Login" asp-controller="Account">Login</a>
        <a asp-action="Privacy" asp-controller="Home">Privacy Policy</a>
        <a asp-action="Terms" asp-controller="Home">Terms of Service</a>
    </div>
    <div class="footer-contact">
        <p>Email: info@educationalplatform.com</p>
        <p>Phone: +359 123 45678 90</p>
    </div>
    <div class="newsletter-signup">
        <input type="email" placeholder="Subscribe to our newsletter">
        <button class="cta-btn">Subscribe</button>
    </div>
</footer>

<script src="js/site.js"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
